<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ConnectFragment">

    <ScrollView
        android:id="@+id/output_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/command_container"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/output"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:textSize="12sp" />
    </ScrollView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/command_container"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/connect"
        android:layout_marginHorizontal="8dp"
        android:hint="输入 IP 地址">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSend"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@id/disconnect"
        android:layout_marginHorizontal="8dp"
        android:text="连接"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/disconnect"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:text="断开"/>
</RelativeLayout>